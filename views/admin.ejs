      <dialog class="add-product-modal" id="productsModal">
        <div class="add-product-height-container">
        <h2>Add a Product</h2>
        <label for="" class="product-label-container">Product ID
        <input type="number" name="productID" id="productID" placeholder="Product ID" disabled>
        </label>
        <label class="product-label-container" for="productTitle">Product Name
        <input type="text" name="producTitlte" id="productTitle" placeholder="Product Name" required>
        </label>
        <label for="" class="product-label-container">Product Description
        <input type="text" name="productDescription" id="productDescription" placeholder="Product Description" required>
        </label>
        <label for="" class="product-label-container">Product Image
        <input type="text" name="productImage" id="productImage" placeholder="Product Image" required>
        </label>
        <label for="" class="product-label-container">Product Price
        <input type="number" name="productPrice" id="productPrice" placeholder="Product Price" required>
        </label>
        <label for="" class="product-label-container">Product Stock
        <input type="number" name="productStock" id="productStock" placeholder="Product Stock" required>
        </label>
        <label for="" class="product-label-container">Product Category
          <select name="productCategory" id="productCategory" required>
            <option value="olympic">Olympic</option>
            <option value="alphabet">Alphabet</option>
            <option value="peter-rabbit">Peter Rabbit</option>
            <option value="nhs">NHS (Limited Edition)</option>
            <option value="king-anniversary">King Anniverary (Limited)</option>
            <option value="collection">Collection</option>
        </select>
        </label>
        <label for="" class="product-label-container">Product Tag
        <select name="productTag" id="productTag" required>
          <option value="none">No Tag</option>
          <option value="new">New</option>
          <option value="sale">Sale</option>
          <option value="hot">Hot</option>
      </select>
        </label>
        <div class="button-container">
        <button class="submit-product" id="submitProductBtn">Submit Product</button>
        <button class="close-btns" id="closeBtn">Close</button>
      </div>
      </div>
